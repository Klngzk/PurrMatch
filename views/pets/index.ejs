<div class="container">
    
  

    <h1 class="display-5 my-5 text-center ">Welcome to PurrMatch</h1>
    
    <% for (let pet of pets){ %>
        <div class="card mb-3" >
            <div class="row">
                
                <div class="col-md-6 col-lg-4">
                    <% if(pet.images.length){ %> 
                    <img class="img-fluid" src="<%= pet.images[0].url%>" >
                    <% }else{ %> 
                        <img class="img-fluid" src="https://res.cloudinary.com/dogg0fsuw/image/upload/v1621999695/PurrMatch/o4bq9seamzld9lk73lz6.webp" >

                    <% } %> 
                </div>
                <div class=" col-md-6 col-lg-8">
                    <div class="card-body">
                        <h4 class="card-title"><%= pet.name %></h4>
                        <p class="card-text"><%= pet.description.substring(0,200) %> <% if (pet.description.length > 200) {%> ... <% } %>  </p>
                        <p class="card-text">
                            <small class="text-muted"><%= pet.location%> </small>
                        </p>
                        <a class="btn btn-outline-primary" href="pets/<%=pet._id%>">View <%= pet.name %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
        
</div>    


<script src="/js/particles.js"></script>
<script src="/js/pjs.js"></script>

